<?xml version="1.0"?>
<robot name="myfirst">
  <!-- Base link definition -->
  <link name="base_link">
    <inertial>
      <mass value="0.25"/>
      <inertia ixx="0.0003" iyy="0.0003" izz="0.0003" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.25"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.6" radius="0.25"/>
      </geometry>
    </collision>
  </link>

  <!-- Additional link definition -->
  <link name="sub_link">
    <!-- Inertial, visual, and collision elements for the sub_link -->
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <!-- Define visual and collision properties for sub_link as needed -->
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.25"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.6" radius="0.25"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint connecting base_link to sub_link -->
  <joint name="base_to_sub" type="revolute">
    <parent link="base_link"/>
    <child link="sub_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/> <!-- Adjust the xyz values as needed -->
    <axis xyz="1 0 0"/>
    <limit effort="10" upper="0" lower="10" velocity="1"/>
  </joint>
</robot>

